<div class="form-container">
  <h3>Update</h3>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="form-user-name">
        <%= f.input :first_name, required: true, label: '&nbsp;'.html_safe, placeholder: 'First name', label_html: { class: 'icons user-icon' } %>
        <%= f.input :last_name, required: true, label: '&nbsp;'.html_safe, placeholder: 'Last name', label_html: { class: 'icons user-icon' } %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Update", class: "form-button" %>
    </div>
  <% end %>
  <%= link_to root_path do %>
    <i class="fas fa-arrow-left fa-2x" style="color: black; margin-top: 30px;"></i>
  <% end %>
</div>
