<div class="form-container">
<h3>Sign in</h3>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.input :email, label: '&nbsp;'.html_safe, required: true, autofocus: true, label_html: { class: 'icons envelope-icon' } %>
  <%= f.input :password, required: true, placeholder: "password (#{@minimum_password_length} chars minimum)", label_html: { class: 'icons lock-icon' } %>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  <%= f.button :submit, "Sign in", class: "form-button" %>
<% end %>
<%= render "devise/shared/links" %>
</div>
